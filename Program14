class flashcards:
   def__init__(self,word,meaning):
      self.word=word
      self.meaning=meaning
   def__str__(self):
     return self.word+ '('+self.meaning+')'
flash=[]
print("Welcome to flashcard")
while(True):
 word=input("Enter the name which you want to add to flashcard:")
 meaning=input("Enter the meaning of the word")
 flash.append(flashcards(word,meaning))
 option=int(input("Enter 0, if you want to add another flashcard:"))
 if(option):
   break
print("\nYour flashcards")
for i in flash:
  print(">", i)
     
